
html(lang='en')
  head
    meta(charset='utf-8')
    title 登入
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700|Lato:400,100,300,700,900', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='./stylesheets/animate.css')
    // Custom Stylesheet
    link(rel='stylesheet', href='./stylesheets/register.css')

    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet prefetch', href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='./stylesheets/register2.css')

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='./javascripts/register2.js')
  body
    .logmod
      if error
        h1
          center
            font(color='red')= error.message
      if success
        h1
          center= success
      .logmod__wrapper
        .logmod__container
          ul.logmod__tabs
            li(data-tabtar='lgm-2')
              a(href='#') Login
            li(data-tabtar='lgm-1')
              a(href='#') Sign Up
            li(data-tabtar='lgm-3')
              a(href='#') Verify
          .logmod__tab-wrapper
            .logmod__tab.lgm-1
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your personal details strong to create an account
              .logmod__form
                form.simform(name='sentMessage', action='/ReCog', method='POST', novalidate='')
                  .sminputs
                    .input.full
                      label.string.optional(for='user-name') Name*
                      input#account.form-control(type='text', placeholder='username', name='username', required='')
                  .sminputs
                    .input.full
                      label.string.optional(for='user-pw') Password *
                      input#password.form-control(type='password', placeholder='Password', name='password', required='')
                  .sminputs
                    .input.full
                      label.string.optional(for='email') Email *
                      input#tokens.form-control(type='email', placeholder='Tokens', name='email', required='',  data-validation-required-message='Please enter your Mail.')
                  .simform__actions
                    button.btn.input.sumbit(type='submit') Create_Account
                    span.simform__actions-sidetext
                      | By creating an account you agree to our
                      a.special(href='#', target='_blank', role='link') Terms & Privacy
            .logmod__tab.lgm-2
              .logmod__heading
                span.logmod__heading-subtitle
                  | Enter your Account and password strong to sign in
              .logmod__form
                form.simform(name='sentMessage', action='/Login', method='POST', novalidate='')
                  .sminputs
                    .input.full
                      label.string.optional(for='user-name') Username*
                      input#account.form-control(type='text', placeholder='username', name='username', required='')
                  .sminputs
                    .input.full
                      label.string.optional(for='user-pw') Password *
                      input#password.form-control(type='password', placeholder='Password', name='password', required='')
                      span.hide-password Show
                  .simform__actions
                    button.btn.input.sumbit(type='submit') Login
                    a(href='/auth/facebook') Sign in with Facebook
                    span.simform__actions-sidetext
                      a.special(role='link', href='forget')
                        | Forgot your password?
                        br
                        | Click here
            .logmod__tab.lgm-3
                .logmod__heading
                  span.logmod__heading-subtitle
                    | Enter your Account to Verify
                .logmod__form
                  form.simform(name='sentMessage', action='/Confirm', method='POST', novalidate='')
                    .sminputs
                      .input.full
                        label.string.optional(for='user-name') Username*
                        input#account.form-control(type='text', placeholder='username', name='username', required='')
                    .sminputs
                      .input.full
                        label.string.optional(for='tokens') Tokens *
                        input#tokens.form-control(type='tokens', placeholder='Tokens', name='tokens', required='',  data-validation-required-message='Please enter your tokens.')
                    .simform__actions
                      button.btn.input.sumbit(type='submit') Verify
                      span.simform__actions-sidetext





  script.
    $(document).ready(function () {
    $('#logo').addClass('animated fadeInDown');
    $("input:text:visible:first").focus();
    });
    $('#username').focus(function() {
    $('label[for="username"]').addClass('selected');
    });
    $('#username').blur(function() {
    $('label[for="username"]').removeClass('selected');
    });
    $('#password').focus(function() {
    $('label[for="password"]').addClass('selected');
    });
    $('#password').blur(function() {
    $('label[for="password"]').removeClass('selected');
    });
